@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<CourseViewModel>

<div class="row">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Courses</h5>
            <a asp-controller="Courses" asp-action="CreateCourse" class="btn btn-primary mb-3">Create Course</a>
            @if (Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Picture</th>
                            <th>Course Name</th>
                            <th>Price</th>
                            <th>Duration</th>
                            <th>Category</th>
                            <th>Process</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img style="width:72px;" src="@item.StockPictureUrl" class="img-thumbnail"/></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Feature.Duration</td>
                            <td>@item.Category.Name</td>
                            <td>
                                <a asp-controller="Courses" asp-action="UpdateCourse" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                    Update
                                </a>
                                <a asp-controller="Courses" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Course not found.
                </div>
            }
        </div>
    </div>
</div>

